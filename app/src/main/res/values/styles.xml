<resources>

    <style name="FrameworkRoot.Theme" parent="@style/Theme.AppCompat.Light.NoActionBar"/>

    <!-- Base application theme. -->
    <style name="Theme.GithubViewer.Base" parent="FrameworkRoot.Theme">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Activity Transitions を使うには、window content transitions を有効にする必要があります。-->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>

        <!-- メインテキスト色 ToolBarのタイトルやドロワーメニュー、EditTextなど -->
        <item name="android:textColorPrimary">#888888</item>
        <item name="android:textColor">@android:color/black</item>


    </style>

    <style name="Theme.GithubViewer" parent="Theme.GithubViewer.Base"/>

    <style name="Theme.GithubViewer.Search" parent="Theme.GithubViewer.Base">
        <item name="colorPrimaryDark">@color/diviver</item>
    </style>

    <style name="Theme.GithubViewer.Text14">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size14</item>
    </style>

    <style name="Theme.GithubViewer.Text12">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size12</item>
    </style>

</resources>
