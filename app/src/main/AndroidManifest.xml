<?xml version="1.0" encoding="utf-8"?>
<manifest package="net.kwmt27.githubsearch"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="${appName}"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubViewer">
        <activity
            android:name=".view.RepositoryListActivity"
            android:configChanges="orientation|screenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.DetailActivity"
            android:configChanges="orientation|screenSize"
            >
        </activity>
        <activity
            android:name=".view.search.SearchActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.GithubViewer.Search"
            >
        </activity>
    </application>

</manifest>